{
  "id": "backend-service-id",
  "algorithm": "round-robin",
  "port": 4040,
  "ssl": {
    "cert": "/path/to/server.crt",
    "key": "/path/to/server.key"
  },
  "workers": "auto",
  "servers": [
    {
      "id": "server-1",
      "host": "localhost",
      "port": 3001,
      "weight": 2,
      "livenessProbe": {
        "path": "/ping",
        "periodSeconds": 5
      }
    },
    {
      "id": "server-2",
      "host": "localhost",
      "port": 3002,
      "livenessProbe": {
        "path": "/ping",
        "periodSeconds": 5
      }
    }
  ]
}
